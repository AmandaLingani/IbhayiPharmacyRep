@model IEnumerable<IGrouping<DateTime, PrescribingSystem.Models.Prescription>>
@{
    Layout = "_PharmacistLayout";
}

<body>
    <div class="container mt-4">
        @* <h2 style="font-family:'Times New Roman'; font-weight:600;">Medication Orders</h2> *@
        
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="fw-bold">
                <i class="bi bi-capsule me-2"></i> Prescriptions
            </h2>
        </div>

        <div class="accordion" id="prescriptionAccordion">
            @foreach (var group in Model)
            {
                var dateId = $"date-{group.Key:yyyyMMdd}";
                <div class="accordion-item mb-2 shadow-sm rounded">
                    <h2 class="accordion-header" id="heading-@dateId">
                        <button class="accordion-button collapsed bg-primary text-white" type="button"
                                data-bs-toggle="collapse" data-bs-target="#collapse-@dateId"
                                aria-expanded="false" aria-controls="collapse-@dateId">
                            <i class="bi bi-calendar3 me-2"></i> @group.Key.ToString("dd MMMM")
                        </button>
                    </h2>
                    <div id="collapse-@dateId" class="accordion-collapse collapse" aria-labelledby="heading-@dateId"
                         data-bs-parent="#prescriptionAccordion">
                        <div class="accordion-body">
                            @foreach (var prescription in group)
                            {
                                <div class="d-flex justify-content-between align-items-center p-2 border rounded mb-2">
                                    <div>
                                        <a asp-action="ProcessPrescription" asp-route-id="@prescription.PrescriptionId" class="text-decoration-none">
                                            <i class="bi bi-file-earmark-text me-2"></i>
                                            <strong>Script #@prescription.PrescriptionId</strong> –
                                            @prescription.Customer?.FirstName @prescription.Customer?.LastName
                                        </a>
                                    </div>
                                  
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            </div>
        </div>
</body>
